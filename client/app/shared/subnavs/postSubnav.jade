#post-error-container
    #post-error-text Please #[strong(ui-sref="signup") log in] to like or contribute to post
    img#post-error-x(src="../../../assets/img/x.png")

section.subnav(post-subnav ng-show="postData")
    .content
        img.profile-picture(src="{{postData.profile_photo_url}}" alt="profile photo")
        .left-icons
            .post-author-date
                span.author {{postData.author}}
                span.date {{postData.created_date | date:"MMM dd, yyyy"}}

            a.icon(ng-click="toggleLike()")
                img(src="assets/img/heart-full.svg" width="21px" alt="New Post Icon" ng-show="isLiked")
                img(src="assets/img/heart-empty.svg" alt="New Post Icon" ng-hide="isLiked")
                span {{postData.likes}}
