.subnav
  .discover-container
    .center
        h2.no-margin Discover
    .center
        p.no-margin.pad1 The latest technical writing from engineers like you
    .center
      a.discover-large(ui-sref="tag({name: tags[0].title})" class="pattern-{{tags[0].pattern}}")
        .darken.radius
          h3 {{tags[0].title}}
      a.discover-small(ui-sref="tag({name: tags[1].title})" class="pattern-{{tags[1].pattern}}")
        .darken.radius
          h3 {{tags[1].title}}
      a.discover-small(ui-sref="tag({name: tags[2].title})" class="pattern-{{tags[2].pattern}}")
        .darken.radius
          h3 {{tags[2].title}}
    .center
      a.discover-small(ui-sref="tag({name: tags[3].title})" class="pattern-{{tags[3].pattern}}")
        .darken.radius
          h3 {{tags[3].title}}
      a.discover-large(ui-sref="tag({name: tags[4].title})" class="pattern-{{tags[4].pattern}}")
        .darken.radius
          h3 {{tags[4].title}}
      a.discover-small(ui-sref="tag({name: tags[5].title})" class="pattern-{{tags[5].pattern}}")
        .darken.radius
          h3 {{tags[5].title}}
.content.align-top
  .large-child.post-list(infinite-scroll="addMorePosts(posts[posts.length-1])" infinite-scroll-disabled="busy" infinite-scroll-distance="0" infinite-scroll-immediate-check="false")
    .post-item(ng-repeat="post in posts")
      a(ui-sref="post({id: post.post_id })")
        h2.title {{post.post_title}}
      .user-info
        a(ui-sref="profile({username: post.username })")
          img.profile-picture(ng-src="{{post.profile_photo_url}}" alt="profile photo")
        a.post-author-date(ui-sref="profile({username: post.username})")
          span.author {{post.username}}
          span.date {{post.created_date | date:"MMM dd, yyyy"}}
      a(ui-sref="post({id: post.post_id })")
        p.summary {{post.summary}}...
